#!/bin/sh

set -e

umask 077

basedir=~/.colossuscoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/colossuscoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# colossuscoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/colossuscoin/colossuscoin-qt "$@"
